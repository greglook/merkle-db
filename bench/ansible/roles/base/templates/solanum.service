[Unit]
Description=Solanum
Requires=network.target
After=network.target

[Service]
ExecStart=/usr/local/bin/solanum /etc/solanum/host.yml
KillMode=process
Restart=on-failure
RestartPreventExitStatus=255
Type=simple
User=daemon
Group=daemon

[Install]
WantedBy=multi-user.target
Alias=solanum.service
